---
import Layout from '../../layouts/Layout.astro';

const categories = [
  { 
    name: "HTML/CSS", 
    slug: "html-css", 
    count: 8, 
    color: "from-blue-400 to-blue-600",
    description: "Webサイトの基礎となるHTMLとCSSの書き方から、レスポンシブデザインまで",
    icon: "🎨"
  },
  { 
    name: "JavaScript", 
    slug: "javascript", 
    count: 12, 
    color: "from-yellow-400 to-yellow-600",
    description: "動的なWebサイトを作るためのJavaScriptプログラミングの基礎と応用",
    icon: "⚡"
  },
  { 
    name: "Python", 
    slug: "python", 
    count: 10, 
    color: "from-green-400 to-green-600",
    description: "初心者に優しいPython言語の基本から、データ分析や自動化まで",
    icon: "🐍"
  },
  { 
    name: "プログラミング入門", 
    slug: "beginners", 
    count: 15, 
    color: "from-purple-400 to-purple-600",
    description: "プログラミングを始めたばかりの方向けの基礎知識と考え方",
    icon: "🔰"
  },
  { 
    name: "Web開発", 
    slug: "web-development", 
    count: 7, 
    color: "from-red-400 to-red-600",
    description: "Webアプリケーション開発の流れやツール、フレームワークの使い方",
    icon: "🌐"
  },
  { 
    name: "アルゴリズム", 
    slug: "algorithms", 
    count: 5, 
    color: "from-indigo-400 to-indigo-600",
    description: "プログラミングの基礎となるアルゴリズムと問題解決の考え方",
    icon: "🧩"
  }
];
---

<Layout title="カテゴリー一覧 - 初心者向けプログラミングブログ">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8 text-kinova-gray">カテゴリー一覧</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map(category => (
        <a 
          href={`/categories/${category.slug}`}
          class={`block bg-gradient-to-r ${category.color} text-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow`}
        >
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-2xl font-bold">{category.name}</h2>
              <span class="text-4xl">{category.icon}</span>
            </div>
            <p class="mb-4 opacity-90">{category.description}</p>
            <div class="flex justify-between items-center">
              <span class="bg-white/20 px-3 py-1 rounded-full text-sm">
                記事数: {category.count}
              </span>
              <span class="flex items-center">
                もっと見る
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>