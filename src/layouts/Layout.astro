---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "初心者向け Webアプリ開発講座 - Kinova" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a class="flex items-center gap-2">
          <img src="/logo.png" alt="Kinova Logo" class="h-10" />
          <span class="text-kinova-gray font-semibold text-xl">Webアプリ開発講座</span>
        </a>
      </div>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-kinova-gray text-white py-8 mt-12">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between gap-8">
          <div class="md:w-1/3">
            <img src="/logo.png" alt="Kinova Logo" class="h-12 mb-4" />
            <p class="text-gray-300">初心者の方でも分かりやすいWebアプリ開発の情報を提供します。</p>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Kinova. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', sans-serif;
  }
  
  body {
    margin: 0;
  }
</style>